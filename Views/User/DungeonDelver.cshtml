@{
    ViewData["Title"] = "Dungeon Delver - Select Game";
}

<h2 class="text-center">Select Your Game</h2>

<form method="post" asp-controller="User" asp-action="SelectGame" class="game-settings-form">
    <div class="form-group">
        <label for="difficulty">Select Difficulty:</label>
        <select name="difficulty" id="difficulty" class="form-control">
            <option value="Easy">Easy (10% Skulls)</option>
            <option value="Medium">Medium (25% Skulls)</option>
            <option value="Hard">Hard (40% Skulls)</option>
        </select>
    </div>

    <div class="form-group">
        <label for="boardSize">Select Board Size:</label>
        <select name="boardSize" id="boardSize" class="form-control">
            <option value="6">6x6 Grid</option>
            <option value="7">7x7 Grid</option>
            <option value="8">8x8 Grid</option>
        </select>
    </div>

    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Start Game</button>
    </div>
</form>
