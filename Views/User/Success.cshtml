@{
    ViewData["Title"] = "Login Success";
    var user = (RegisterandLoginApp.Models.User)ViewData["User"];  // Get the user data from ViewData
}

<h2>Login Success</h2>
<p>Welcome, @user.Username!</p>
<table>
    <tr>
        <th>Id</th>
        <td>@user.Id</td>
    </tr>
    <tr>
        <th>Username</th>
        <td>@user.Username</td>
    </tr>
    <tr>
        <th>PasswordHash</th>
        <td>@user.PasswordHash</td>
    </tr>
    <tr>
        <th>Salt</th>
        <td>@user.Salt</td>
    </tr>
    <tr>
        <th>Groups</th>
        <td>@user.Groups</td>
    </tr>
</table>

<p><a href="/User/Logout">Logout</a></p>
